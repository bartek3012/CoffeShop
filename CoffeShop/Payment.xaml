<Page x:Class="CoffeShop.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeShop"
      mc:Ignorable="d" 
      d:Height="680" d:Width="450"
      Title="Payment">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select payment method" FontSize="40" Grid.Row="0" FontFamily="Forte" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource RoundButtonTemplate}"  Grid.Row="1" Height="200" Background="Transparent" Click="PayButton_Click">
            <Image Source="/hand.png" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Fill"/>
        </Button>
        <Button Style="{StaticResource RoundButtonTemplate}"  Grid.Row="2" Height="200" Background="Transparent" Click="PayButton_Click">
            <Image Source="/credit-card.png" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Fill"/>
        </Button>

    </Grid>
</Page>
