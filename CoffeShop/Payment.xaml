<Page x:Class="CoffeShop.Payment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeShop"
      mc:Ignorable="d" 
      d:Height="680" d:Width="450"
      Title="Payment">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select payment method" FontSize="40" Grid.Row="0" FontFamily="Forte" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Style="{StaticResource RoundButtonTemplate}"  Grid.Row="1" Height="200" Background="Transparent">
            <Image Source="C:\Users\user\source\repos\CoffeShop\CoffeShop\Images\hand.png" VerticalAlignment="Center" HorizontalAlignment="Center" Stretch="Fill"/>
        </Button>
       
        
    </Grid>
</Page>
