<Page x:Class="CoffeShop.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CoffeShop"
      mc:Ignorable="d" 
      d:Height="680" d:Width="450"
      Title="Start">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Welcome in .Net Coffe! &#13; Press START to make your order :)" Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="36" FontFamily="Forte" TextAlignment="Center" Margin="40"/>
        <Button Height="100" Width="400" Style="{StaticResource RoundButtonTemplate}" Content="START" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center"  FontSize="55" Click="StartButton_Click" Margin="10"/>
    </Grid>
</Page>
